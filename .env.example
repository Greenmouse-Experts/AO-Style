# AO-Style Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===================================
# Tawk.to Live Chat Configuration
# ===================================

# Your Tawk.to Property ID (required for live chat)
# Get this from your Tawk.to dashboard: Admin Panel > Property Settings
# Example: 58c3f9b421b8311926dd0e6
VITE_APP_TAWKTO_PROPERTY_ID=58c3f9b421b8311926dd0e6

# Your Tawk.to Widget ID (optional, defaults to 'default')
# Get this from your Tawk.to dashboard: Admin Panel > Chat Widget > Widget ID
VITE_APP_TAWKTO_WIDGET_ID=default

# ===================================
# API Configuration
# ===================================

# Backend API Base URL
VITE_APP_API_BASE_URL=https://your-api-domain.com/api

# API Version
VITE_APP_API_VERSION=v1

# ===================================
# Authentication Configuration
# ===================================

# JWT Secret (for token validation)
VITE_APP_JWT_SECRET=your-jwt-secret-here

# Session timeout in minutes
VITE_APP_SESSION_TIMEOUT=30

# Refresh token expiry in days
VITE_APP_REFRESH_TOKEN_EXPIRY=7

# ===================================
# Third-party Services
# ===================================

# Google Analytics ID
REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX

# Google Maps API Key
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Cloudinary Configuration
REACT_APP_CLOUDINARY_CLOUD_NAME=your-cloud-name
REACT_APP_CLOUDINARY_API_KEY=your-api-key
REACT_APP_CLOUDINARY_API_SECRET=your-api-secret

# ===================================
# Payment Configuration
# ===================================

# Stripe Configuration
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
REACT_APP_STRIPE_SECRET_KEY=sk_test_your-stripe-secret

# PayPal Configuration
REACT_APP_PAYPAL_CLIENT_ID=your-paypal-client-id

# ===================================
# Application Configuration
# ===================================

# Environment (development, staging, production)
NODE_ENV=development

# Application Name
REACT_APP_NAME=AO-Style

# Application Version
REACT_APP_VERSION=1.0.0

# Application URL
REACT_APP_URL=http://localhost:3000

# Enable debug mode
REACT_APP_DEBUG=true

# ===================================
# Feature Flags
# ===================================

# Enable live chat for guests (true/false)
VITE_APP_ENABLE_LIVE_CHAT=true

# Enable push notifications
VITE_APP_ENABLE_PUSH_NOTIFICATIONS=true

# Enable analytics tracking
VITE_APP_ENABLE_ANALYTICS=true

# Enable maintenance mode
VITE_APP_MAINTENANCE_MODE=false

# ===================================
# Firebase Configuration
# ===================================

REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ===================================
# Database Configuration
# ===================================

# Database URL (for server-side if applicable)
DATABASE_URL=postgresql://username:password@localhost:5432/ao_style_db

# Redis URL (for caching if applicable)
REDIS_URL=redis://localhost:6379

# ===================================
# Email Configuration
# ===================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid API Key
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ===================================
# Security Configuration
# ===================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# Logging Configuration
# ===================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ===================================
# Performance Configuration
# ===================================

# Enable service worker
REACT_APP_ENABLE_SERVICE_WORKER=true

# Enable bundle analyzer
ANALYZE_BUNDLE=false

# Build optimization
GENERATE_SOURCEMAP=false

# ===================================
# Social Media Integration
# ===================================

# Facebook App ID
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Twitter API Keys
REACT_APP_TWITTER_API_KEY=your-twitter-api-key

# Instagram Business Account ID
REACT_APP_INSTAGRAM_BUSINESS_ID=your-instagram-business-id

# ===================================
# Monitoring & Error Tracking
# ===================================

# Sentry DSN
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# New Relic License Key
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# ===================================
# Development Tools
# ===================================

# Enable React Developer Tools
REACT_APP_ENABLE_REACT_DEVTOOLS=true

# Enable Redux DevTools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true

# Mock API responses in development
REACT_APP_MOCK_API=false

# ===================================
# Build Configuration
# ===================================

# Public URL for static assets
PUBLIC_URL=/

# Build path
BUILD_PATH=build

# Inline runtime chunk
INLINE_RUNTIME_CHUNK=false

# ===================================
# Notes
# ===================================

# 1. Never commit .env files with real credentials to version control
# 2. Use different .env files for different environments (.env.development, .env.production, etc.)
# 3. Restart your development server after changing environment variables
# 4. Variables starting with VITE_APP_ are exposed to the browser
# 5. Server-side variables should NOT start with VITE_APP_
# 6. For Tawk.to live chat: Set VITE_APP_TAWKTO_PROPERTY_ID and VITE_APP_ENABLE_LIVE_CHAT=true
# 7. Live chat shows for guest users, internal chat for authenticated users
